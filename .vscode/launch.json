  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "buildScripts/testSetup.js",
        "${workspaceFolder}/src/**/*.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout", "999999",
        "--colors",
        "buildScripts/testSetup.js",
        "${file}",
        "${fileDirname}/${fileBasenameNoExtension}.spec.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current Directory",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout", "999999",
        "--colors",
        "buildScripts/testSetup.js",
        "${fileDirname}/*.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
